<h1> Add a New Recipe </h1>

<%= form_for(@recipe) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :ingredients%>
    <%= f.text_field :ingredients %>

    <%= f.label :directions %>
    <%= f.text_field :directions %>

   <p> Select a Family Member that Already Exists in the Recipe Box: </p>
   <%= f.collection_select(:recipe_creator_id, RecipeCreator.all, :id, :name, prompt: true) %>
    <%= f.fields_for :recipe_creator do |rc| %>
        <%= rc.label :name %>
        <%= rc.text_field :name %>
        <%= rc.label :phone_number %>
        <%= rc.telephone_field :phone_number %>
        <%= rc.label :secret_ingredient %>?
        <%= rc.check_box :secret_ingredient %>
    <% end %>

    <%= f.submit %>
<% end %>


